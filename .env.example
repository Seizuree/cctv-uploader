# Database
DATABASE_URL=postgresql://cctv:cctv@localhost:5432/cctv

# PostgreSQL container (docker-compose)
POSTGRES_USER=cctv
POSTGRES_PASSWORD=cctv
POSTGRES_DB=cctv

# Auth
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Camera encryption
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
CAMERA_ENCRYPTION_KEY=your-fernet-key-here

# GCS (HMAC Keys)
# Generate at: Cloud Console > Cloud Storage > Settings > Interoperability
GCS_BUCKET=your-gcs-bucket-name
GCS_ACCESS_KEY=GOOG1Exxxxxxxxxxxxxxxxxxxx
GCS_SECRET_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Worker
BATCH_INTERVAL_SECONDS=60
BATCH_SIZE=10
TEMP_VIDEO_DIR=/tmp/cctv

# Hikvision
TRACK_ID=101
