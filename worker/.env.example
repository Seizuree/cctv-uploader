# Database (Required)
DATABASE_URL=postgresql://cctv:cctv@localhost:5432/cctv

# Camera Password Encryption (Required)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
CAMERA_ENCRYPTION_KEY=

# Google Cloud Storage - S3-compatible HMAC (Required)
GCS_BUCKET=your-bucket-name
GCS_ACCESS_KEY=
GCS_SECRET_KEY=

# Worker Settings (Optional - defaults shown)
BATCH_INTERVAL_SECONDS=60
BATCH_SIZE=10
TEMP_VIDEO_DIR=/tmp/cctv
EXACT_CUT=false

# Hikvision Settings (Optional)
TRACK_ID=101

# HTTP API Settings (Optional - defaults shown)
WORKER_HOST=0.0.0.0
WORKER_PORT=8001
AUTO_BATCH_ENABLED=true
